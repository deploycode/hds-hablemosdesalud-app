{% extends 'layouts/dashboard.html.twig' %}
{% block title %}Users list{% endblock %}
{% block body %}
    <div class="form-group text-right">
      <a href="{{ path('user_new') }}" class="btn btn-success">Create a new user</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Username</th>
                <th>Role</th>
                <th>Isactive</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.username }}</td>
                <td>{{ user.role }}</td>
                <td>
                {% if user.isActive %}
                  <i class="glyphicon glyphicon-ok btn btn-success"></i>
                {% else %}
                 <i class="glyphicon glyphicon-remove btn btn-danger"></i>
                {% endif %}</td>
                <td>
                    <a href="{{ path('user_show', { 'id': user.id }) }}" class="btn btn-info glyphicon glyphicon-share-alt"></a>
                    <a href="{{ path('user_edit', { 'id': user.id }) }}" class="btn btn-primary glyphicon glyphicon-pencil"></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
