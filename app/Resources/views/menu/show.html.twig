{% extends 'layouts/dashboard.html.twig' %}
{% block title %}Menu{% endblock %}

{% block body %}
    <div class="form-group text-right">
        <a href="{{ path('menu_index') }}" class="btn btn-info">Back to the list</a>
    </div>
    <table class="table table-striped table-bordered table-hover">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ menu.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ menu.name }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ menu.slug }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if menu.createdAt %}{{ menu.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Updatedat</th>
                <td>{% if menu.updatedAt %}{{ menu.updatedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>
    <div class="form-group text-right">
        <a href="{{ path('menu_edit', { 'id': menu.id }) }}" class="btn btn-success">Edit</a>
    </div>
    <div class="form-group text-right">
        {{ form_start(delete_form) }}
            <input type="submit" value="Delete" class="btn btn-danger">
        {{ form_end(delete_form) }}
    </div>
{% endblock %}
