{% extends 'layouts/dashboard.html.twig' %}
{% block title %}Menus list{% endblock %}
{% block body %}
    <div class="form-group text-right" >
        <a href="{{ path('menu_new') }}" class="btn btn-success">Create a new menu</a>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for menu in menus %}
            <tr>
                <td>{{ menu.name }}</td>
                <td>
                  <a href="{{ path('menu_show', { 'id': menu.id }) }}" class="btn btn-info glyphicon glyphicon-share-alt" ></a>
                  <a href="{{ path('menu_edit', { 'id': menu.id }) }}" class="btn btn-primary glyphicon glyphicon-pencil"  ></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
